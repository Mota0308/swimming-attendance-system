<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SwimmingAttendanceApp"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.SwimmingAttendanceApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.SwimmingAttendanceApp" />
            
        <activity
            android:name=".ui.parent.ParentMainActivity"
            android:exported="false"
            android:theme="@style/Theme.SwimmingAttendanceApp" />
            
        <activity
            android:name=".ui.coach.CoachMainActivity"
            android:exported="false"
            android:theme="@style/Theme.SwimmingAttendanceApp" />

        <activity
            android:name=".ui.admin.AdminMainActivity"
            android:exported="false"
            android:theme="@style/Theme.SwimmingAttendanceApp"
            android:label="管理員" />

        <activity
            android:name=".ui.TestConnectionActivity"
            android:exported="false"
            android:theme="@style/Theme.SwimmingAttendanceApp"
            android:label="MongoDB連接測試" />

        <activity
            android:name=".ui.SimpleTestActivity"
            android:exported="false"
            android:theme="@style/Theme.SwimmingAttendanceApp"
            android:label="簡單測試" />

        <activity
            android:name=".ui.APITestActivity"
            android:exported="false"
            android:theme="@style/Theme.SwimmingAttendanceApp"
            android:label="API連接測試" />

        <activity
            android:name=".ui.parent.AttendanceTableActivity"
            android:exported="false"
            android:theme="@style/Theme.SwimmingAttendanceApp"
            android:label="出席記錄表格" />

        <activity
            android:name=".ui.parent.StudentOverviewActivity"
            android:exported="false"
            android:theme="@style/Theme.SwimmingAttendanceApp"
            android:label="學生總覽" />

        <activity
            android:name=".ui.NetworkConfigActivity"
            android:exported="false"
            android:theme="@style/Theme.SwimmingAttendanceApp"
            android:label="網絡配置" />

    </application>

</manifest> 