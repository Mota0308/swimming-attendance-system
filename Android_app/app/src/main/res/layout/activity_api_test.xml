<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- 標題 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🧪 API 連接測試"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- 結果顯示區域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="正在加載配置信息..."
            android:textSize="14sp"
            android:textColor="#333333"
            android:fontFamily="monospace"
            android:lineSpacingExtra="4dp" />

    </ScrollView>

    <!-- 按鈕區域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="12dp">

        <!-- 配置信息按鈕 -->
        <Button
            android:id="@+id/configInfoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 顯示配置信息"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="8dp" />

        <!-- 測試連接按鈕 -->
        <Button
            android:id="@+id/testConnectionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧪 測試API連接"
            android:textSize="16sp"
            android:backgroundTint="#2196F3"
            android:layout_marginBottom="8dp" />

        <!-- 測試學生資料按鈕 -->
        <Button
            android:id="@+id/testStudentsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📥 測試獲取學生資料"
            android:textSize="16sp"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="8dp" />

        <!-- 測試登入按鈕 -->
        <Button
            android:id="@+id/testLoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔐 測試用戶登入"
            android:textSize="16sp"
            android:backgroundTint="#9C27B0" />

    </LinearLayout>

</LinearLayout> 