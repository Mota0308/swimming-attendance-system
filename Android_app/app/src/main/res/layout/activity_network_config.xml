<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 標題 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🌐 網絡配置"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 當前配置顯示 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="當前配置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvCurrentConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_info_border"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- 服務器選擇按鈕 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="選擇API服務器"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 生產環境服務器 -->
        <Button
            android:id="@+id/btnProductionServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🌐 生產環境服務器 (203.145.95.240:3001)"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_button_primary" />

        <!-- 本地模擬器 -->
        <Button
            android:id="@+id/btnLocalEmulator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📱 本地模擬器 (10.0.2.2:3001)"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_button_secondary" />

        <!-- 本地Wi-Fi -->
        <Button
            android:id="@+id/btnLocalWifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🏠 本地Wi-Fi (192.168.1.24:3001)"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_button_secondary" />

        <!-- 測試連接 -->
        <Button
            android:id="@+id/btnTestConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧪 測試連接"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_button_test" />

        <!-- 測試結果 -->
        <TextView
            android:id="@+id/tvTestResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_info_border"
            android:padding="12dp"
            android:text="點擊上方按鈕測試連接"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- 操作按鈕 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="重置"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_button_reset" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="返回"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_button_back" />

        </LinearLayout>

        <!-- 說明文字 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 說明：\n• 生產環境：所有用戶都可使用\n• 本地模擬器：僅開發測試使用\n• 本地Wi-Fi：同一Wi-Fi網絡內使用\n• 智能選擇：應用會自動選擇最佳服務器"
            android:textSize="12sp"
            android:background="@drawable/bg_info_border"
            android:padding="12dp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</ScrollView> 