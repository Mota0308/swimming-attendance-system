<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="12dp">

    <!-- 頂部Tab -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/surface"
        android:padding="8dp">

        <TextView
            android:id="@+id/tabAttendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="出席記錄"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tabConfig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="系統配置"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tabCoachMgmt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="教練管理"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 出席記錄（簡化） -->
    <LinearLayout
        android:id="@+id/sectionAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出席記錄（管理員簡化視圖）"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="此處可嵌入家長版的出席列表或簡化統計。" />
    </LinearLayout>

    <!-- 系統配置（簡化） -->
    <LinearLayout
        android:id="@+id/sectionConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系統配置（簡化）"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="此處可直接使用教練版本主界面的部分功能。" />
    </LinearLayout>

    <!-- 教練管理 -->
    <LinearLayout
        android:id="@+id/sectionCoachMgmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/selectedDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-01-01"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/pickDateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="選擇日期" />

            <EditText
                android:id="@+id/coachSearchEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="搜索教練姓名"
                android:background="@drawable/bg_text_border"
                android:padding="8dp"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/searchCoachButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/uploadWorkHoursButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上傳"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/coachListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

    </LinearLayout>

</LinearLayout> 