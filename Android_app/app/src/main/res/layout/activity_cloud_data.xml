<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 標題 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="雲端數據管理"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 配置信息 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔧 API 配置"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvConfig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="正在加載配置..."
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_text_border"
                    android:padding="12dp"
                    android:minHeight="80dp" />

                <Button
                    android:id="@+id/btnShowConfig"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="刷新配置"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.AppCompat.Button.Colored" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 操作按鈕 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚀 API 操作"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnTestConnection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🧪 測試 API 連接"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:id="@+id/btnFetchStudents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📥 獲取學生資料"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:id="@+id/btnUploadStudents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📤 上傳學生資料"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.AppCompat.Button.Colored" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 狀態顯示 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📊 操作狀態"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="等待操作..."
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_text_border"
                    android:padding="12dp"
                    android:minHeight="120dp"
                    android:scrollbars="vertical" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 說明文字 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 使用說明：\n• 點擊「測試連接」檢查 API 是否可用\n• 點擊「獲取資料」從雲端下載學生資料\n• 點擊「上傳資料」將本地資料同步到雲端\n• 所有操作都會在狀態區域顯示結果"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_info_border"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView> 