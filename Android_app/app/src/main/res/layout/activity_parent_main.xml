<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <!-- 頂部標題 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🏊‍♂ 游泳課程管理系統 - 家長版本"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:gravity="center"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="2dp" />

    <!-- 用戶信息 -->
    <TextView
        android:id="@+id/userInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="👤 當前用戶信息"
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="1dp" />

    <!-- 功能按鈕區域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="📋 功能選單"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="20dp" />

        <!-- 獲取學生資料按鈕 -->
        <Button
            android:id="@+id/getStudentDataButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="📥 獲取我的學生資料"
                android:textSize="16sp"
                android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="12dp" />

        <!-- 我的學生出席記錄按鈕 -->
        <Button
            android:id="@+id/myStudentAttendanceButton"
                android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="📊 我的學生出席記錄"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:layout_marginBottom="12dp" />

        <!-- 學生總覽按鈕 -->
        <Button
            android:id="@+id/studentOverviewButton"
                    android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="📈 學生總覽"
                android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800" />

        </LinearLayout>

    <!-- 學生列表區域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👥 學生列表"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
        android:layout_marginBottom="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/studentListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>

    </LinearLayout>

    <!-- 載入中指示器 -->
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout> 